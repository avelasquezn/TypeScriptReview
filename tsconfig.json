{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "lib": ["ES6"],
    "sourceMap": true,
    "rootDir": "./src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./build",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
  },
  "exclude": [
    "node_modules"
  ]
}